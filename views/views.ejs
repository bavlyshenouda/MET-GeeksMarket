<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>View Portfolios</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }
        .row {
            margin: 0;
        }
        .navbar-default {
            height: 100px;
            padding-top: 23px;
            padding-left: 70px;
            border: 0;
            border-radius: 0 !important;
            background: #2c3e50;
        }
        .navbar-default .navbar-brand {
            text-transform: uppercase;
            font-size: 2em;
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
            cursor: pointer;
        }
        .navbar-default .navbar-brand:hover {
            color: #18bc9c;
            transition: color 0.3s ease;
        }
        .card {
            padding: 10px;
            padding-top: 20px;
            background: #18bc9c;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 10px 3% 1% 3%;
            height: 190px;
            width: calc(80% * (1/3));
        }
        .card .card-title {
            text-align: left;
            padding-left: 0px;
            color: #02695e;
            font-size: 1.5em;
            text-transform: capitalize;
            margin-left: 0px;
        }
        .card .card-link {
            margin-top: 10px;
            font-size: 1.1em;
            font-weight: bold;
            width: 90%;
            border: 2px solid white;
            color: white;
            background: transparent;
            transition: background-color 0.5s ease;
        }
        .card .card-link:hover {
            color: #18bc9c;
            background: white;
            transition: background-color 0.5s ease;
        }
        .form-container {
            height: 400px;
            border-left: 1px solid gray;
            padding-left: 30px;
        }
        .form-control {
            width: 90%;
        }
        .codeimg{
          margin-top: 10px;
          margin-right: 15px;
        }

    </style>
</head>

<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Geeks' market</a>
      </div>
    </div>
  </nav>

  <div class="container theme-showcase" role="main">
<!-- Main jumbotron for a primary marketing message or call to action -->
<div>
<div class="jumbotron">
  <div class="container">
    <br>
    <h2>Porfolio summeries</h2>
  </div>
</div>
            <div class="row">
                <% for(var i=0; i<portfolio.length; i++){%>
                    <div class="card col-xs-4">
                      <div class='col-xs-4'>
                        <img src='<%=portfolio[i].img%>' height="40" width="40">
                        </div>
                        <div class='col-xs-8'>
                        <p class="card-title"> <%= portfolio[i].username %></p>
                      </div>
                        <%if(portfolio[i].works[0].flag==0){%>
                        <a href="<%= portfolio[i].works[0].url%>" class="btn btn-primary card-link">A code repo</a> <%}%>
                        <%if(portfolio[i].works[0].flag==1){%>
                        <br><img class="codeimg" src='<%=portfolio[i].works[0].url%>' height="60" width="60"><%}%>
                        <%if(portfolio[i].works.length>=2){%>
                          <%if(portfolio[i].works[1].flag==0){%>
                          <a href="<%= portfolio[i].works[1].url %>" class="btn btn-primary card-link">A code repo</a> <%}%>
                          <%if(portfolio[i].works[1].flag==1){%>
                          <img class="codeimg" src='<%=portfolio[i].works[1].url%>' height="60" width="60"><%}%>
                          <%}%>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
