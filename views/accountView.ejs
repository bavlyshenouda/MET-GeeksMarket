<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>View Portfolios</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }
        .row {
            margin: 0;
        }
        .navbar-default {
            height: 100px;
            padding-top: 23px;
            padding-left: 70px;
            border: 0;
            border-radius: 0 !important;
            background: #2c3e50;
        }
        .navbar-default .navbar-brand {
            text-transform: uppercase;
            font-size: 2em;
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
            cursor: pointer;
        }
        .navbar-default .navbar-brand:hover {
            color: #18bc9c;
            transition: color 0.3s ease;
        }
        .card {
            padding: 10px;
            padding-top: 20px;
            background: #18bc9c;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 10px 3% 1% 3%;
            height: 190px;
            width: calc(80% * (1/3));
        }
        .card .card-title {
            text-align: left;
            padding-left: 0px;
            color: #02695e;
            font-size: 1.5em;
            text-transform: capitalize;
            margin-left: 0px;
        }
        .card .card-link {
            margin-top: 10px;
            font-size: 1.1em;
            font-weight: bold;
            width: 90%;
            border: 2px solid white;
            color: white;
            background: transparent;
            transition: background-color 0.5s ease;
        }
        .card .card-link:hover {
            color: #18bc9c;
            background: white;
            transition: background-color 0.5s ease;
        }
        .form-container {
            height: 400px;
            border-left: 1px solid gray;
            padding-left: 30px;
        }
        .form-control {
            width: 90%;
        }
        .codeimg{
          margin-top: 10px;
          margin-right: 15px;
        }

    </style>
</head>

<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Geeks' market</a>
      </div>
    </div>
  </nav>

  <div class="container theme-showcase" role="main">
<!-- Main jumbotron for a primary marketing message or call to action -->
<div>
<div class="jumbotron">
  <div class="container">
    <br>
    <h2>Your Porfolio</h2>
  </div>
</div>
<% if(message){%> <div class= "alert alert-sucess"> <%=message%> </div> <% } %>
<div class="row">
<div class="col-xs-12 col-md-8">
<div class="row">
    <% for(var i=0; i<portfolio.works.length; i++){%>
      <%if(portfolio.works[i].flag==0){%>
      <a href="<%= portfolio.works[i].url%>" class="btn btn-primary card-link">A code repo</a> <%}%>
      <%if(portfolio.works[i].flag==1){%>
      <br><img class="codeimg" src='<%=portfolio.works[i].url%>' height="60" width="60"><%}%>
    <% } %>
</div>
</div>
<div class="col-xs-12 col-md-4">
<div class="form-container">
    <h3 style="margin-bottom:40px;">Add Work</h3>
    <form method="post" action='/updateSnap' enctype="multipart/form-data" id="pic">

      <label> upload a snapshot</label> <input type="file" name="myfile" style="display: true;" id="snap">
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
        <br>
        <form method="post" action='/updateUrl' id="url">
              <label>post a url</label>  <input type="text" name="myfile" style="display: true;" id="file">

                <button type="submit" class="btn btn-primary">Upload</button>
            </form>


   <% if(flag){%> <div class= "alert alert-danger"> Choose file first to upload it</div> <% } %>
</div>
</div>
</div>
    <footer>
      <p>&copy; 2017 Bavly's, Inc.</p>
    </footer>

</html>
